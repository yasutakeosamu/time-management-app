<div class='header'>
  <div class='header-top'>
    <%= link_to 'TimeManagement', root_path, class:'header-logo' %>
    <div class='user-name-wrapper'>
      <div class='user-name'>
        <%= current_user.name %>
      </div>
        <%= link_to 'ログアウト', destroy_user_session_path, method: 'DELETE', class:'logout' %>
    </div>
  </div>
  <div class='header-bottom'>
    <%= link_to 'タスクを追加する', '#', class:'add-task' %>
      <div class='board-name'>
        BoardName(仮)
      </div>
      <div class='board-menu'>
      
        <%= form_with url:boards_path, local:true do |f| %>
          <%= f.text_field :name, placeholder:'ボードを追加する', class:'add-board' %>
          <%= f.submit '追加', class:'mini-btn' %>
        <% end %>
          <%= form_with url:'', method:'GET', local:true do |f| %>
            <select name='board_id' class='change-board'>
              <option>ボードを選択する</option>
              <%= @boards.each do |board| %>
                <% if board.user_id == current_user.id %>
                  <option value=<%=board.id%>> <%= board.name %> </option>
                <% end %>
              <% end %>
            </select>
            <%= f.submit '選択', class:'mini-btn' %>
          <% end %>
      </div>    
  </div>
</div>